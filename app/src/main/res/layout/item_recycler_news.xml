<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="288dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_news"
    android:background="@color/fondoOscuro"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/posterPeliculaNews"
        android:layout_width="140dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/separacion10dp"
        />
    <TextView
        android:id="@+id/tituloPeliculaTextNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Nombre Pelicula"
        app:layout_constraintStart_toEndOf="@id/posterPeliculaNews"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/separacion10dp"
        android:layout_marginTop="44dp"
        />
    <TextView
        android:id="@+id/fechaPeliculaTextNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:text="fecha pelicula"
        app:layout_constraintStart_toEndOf="@id/posterPeliculaNews"
        app:layout_constraintTop_toBottomOf="@id/tituloPeliculaTextNews"
        android:layout_marginStart="@dimen/separacion10dp"
        />
    <TextView
        android:id="@+id/infoPeliculaTextNews"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/posterPeliculaNews"
        app:layout_constraintTop_toBottomOf="@id/fechaPeliculaTextNews"
        android:layout_marginStart="@dimen/separacion10dp"
        android:layout_marginTop="@dimen/separacion10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="@dimen/separacion10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>