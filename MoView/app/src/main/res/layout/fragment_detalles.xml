<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.detalles.DetallesFragment"
    android:background="@color/fondoOscuro">

    <ImageView
        android:id="@+id/cartelPeliculaDetalles"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/posterPelicula"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginStart="@dimen/margenHorizontal"
        />


    <TextView
        android:id="@+id/nombrePelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cartelPeliculaDetalles"
        app:layout_constraintStart_toEndOf="@id/posterPelicula"
        android:layout_marginStart="@dimen/margenHorizontal"
        android:text="Nombre"
        android:textColor="@color/white"
        android:textSize="40sp"
        />
    <TextView
        android:id="@+id/datosPelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nombrePelicula"
        app:layout_constraintStart_toEndOf="@id/posterPelicula"
        android:layout_marginStart="@dimen/margenHorizontal"
        android:text="AÃ±o - Director"
        android:textColor="@color/white"
        android:textSize="15dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>